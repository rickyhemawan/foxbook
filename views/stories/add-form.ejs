<%- include('../partials/header', { username }) %>
<!-- Form -->
<div class="container my-3">
  <div class="card">
    <h2 class="card-header">New Story</h2>
    <div class="card-body">
      <%- include('../components/error-handler', { errors }) %>
      <form action="/stories/create" method="post">
        <div class="row">
          <div class="mb-3 col-12">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="mb-3 col-12">
            <label class="form-label">Content</label>
            <input type="text" class="form-control" name="content">
          </div>
        </div>
    
        <div class="row justify-content-end mb-3">
          <div class="col-auto">
            <button type="submit" class="btn btn-primary">Create Story</button>
          </div>
          <div class="col-auto">
            <a class="btn btn-outline-danger" href="/user">Cancel</a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>